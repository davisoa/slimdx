def build( b ):
	includes = [ "Source", "../../External/HippoMocks" ]
	assembly_references = [
		"System.dll",
		"System.Data.dll",
		"System.Drawing.dll",
		"System.Windows.Forms.dll",
		"System.XML.dll",
		"../../Products/SlimDX/bin/Debug/SlimDX.dll",
		"../../Products/SlimDX.Implementation/SlimDX.Implementation.x86.dll"
	]
	
	library_paths = [
		"C:\\Program Files (x86)\\Microsoft DirectX SDK (February 2010)\\Lib",
		"C:\\Program Files (x86)\\Microsoft Visual Studio 9.0\\VC\\lib",
		"C:\\Program Files (x86)\\Microsoft Visual Studio 9.0\\VC\\atlmfc\\lib",
		"C:\\Program Files\\Microsoft SDKs\\Windows\\v6.0A\\\\lib"
	]
	
	b( "c++",
		output = "SlimDX.Tests",
		format = "app",
		arch = "x86",
		features = "clr",
		source = FileSet("Source/*.cpp", "Source/Framework/*.cpp", "Source/Tests/*.cpp" ),
		include_paths = includes,
		library_paths = library_paths,
		assemblies = assembly_references
	)
	