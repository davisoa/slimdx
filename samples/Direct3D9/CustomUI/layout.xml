<?xml version="1.0" encoding="utf-8"?>
<SlimUI>
  
  <GlobalLayout>
    <Button>
      <Element Name="fill">
        <TextureRectangle>0, 0, 136, 54</TextureRectangle>
        <TextureColor>
          <State Name="Normal">150, 255, 255, 255</State>
          <State Name="Pressed">200, 255, 255, 255</State>
        </TextureColor>
        <FontColor>
          <State Name="MouseOver">255, 0, 0, 0</State>
        </FontColor>
      </Element>
      <Element Name="main">
        <TextureRectangle>136, 0, 116, 54</TextureRectangle>
        <TextureColor Default="0, 255, 255, 255">
          <State Name="MouseOver">160, 255, 255, 255</State>
          <State Name="Pressed">60, 0, 0, 0</State>
          <State Name="Focus">30, 255, 255, 255</State>
        </TextureColor>
        <FontColor>
          <State Name="MouseOver">255, 0, 0, 0</State>
        </FontColor>
      </Element>
    </Button>
  </GlobalLayout>
  
  <Interface>
    <Dialog>
      <Label Text="Hello" Font="Arial, 32, Bold"/>
      <Button Text="Toggle full screen" X="100" Y="100"/>
      <Button Text="Go away loser" X="300" Y="300"/>
      <CheckBox Text="Click me now!" X="100" Y="350"/>
      <RadioButton Text="Radio FTW WOOT" X="100" Y="400"/>
      <RadioButton Text="Radio FTW EPIC" X="300" Y="400"/>
      <RadioButton Text="Radio Group 2" X="0" Y="100" Group="2"/>
      <ScrollBar X="300" Y="10"/>
    </Dialog>
  </Interface>
</SlimUI>