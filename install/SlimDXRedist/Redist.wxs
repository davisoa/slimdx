          <Component Id="D3DCompiler_x86" DiskId="1" Guid="21E764E6-B901-44db-B24C-2CFC012C6EA9">
            <File Id="$(var.ShortName)_D3DCompiler_42_x86" Name="$(var.ShortName)_D3DCompiler_42_x86.cab" Source="..\ExtraFiles\DXRedist\x86\$(var.ShortName)_D3DCompiler_42_x86.cab" />
          </Component>
